<%- include("../header") %> 
<%- include("../components/navbar") %>
<%- include("../components/project_menu") %>
<%- include("../components/flash_msg") %>

<h2>Project Detail Page</h2>
<% items.forEach(item => { %>

    <ul class="list-group task-list">
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-8">
                    <div class="task-details">
                        <h3 class="task-name"><%= item.name %></h3>
                        <p class="task-description"><%= item.description %></p>
                        <p class="task-author">Author: <%= item.author %></p>
                    </div>
                </div>
                <div class="col-md-2">
                    <p class="task-date">Created At: <%= item.displayCreatedAt() %></p>
                    <p class="task-date">Updated At: <%= item.displayUpdatedAt() %></p>
                </div>
            </div>
        </li>
    </ul>
<% }); %>

<br>
<h2>Tasks</h2>

<!-- add new task of this project -->
<h3>Add Task</h3>


<style>
.task-input-width {
    width: 90%;
}

</style>

<form action="/tasks/add" method="post" class="col">
        <input name="project_id" type="hidden" value="<%= projectInformation.id %>">
        <input placeholder="Title" class="form-control task-input-width my-1" name="name" type="text" >
        <textarea rows="3" placeholder="Description" class="form-control task-input-width my-1" name="description"></textarea>
        <button class="btn btn-primary" type="submit">Add Task</button>
</form>

<br>

<ul class="list-group task-list">
        <% childItems.forEach(task => { %>
            <li class="list-group-item task-item" data-task-id="<%= task.id %>">
                <div class="task-id" data-task-id="<%= task.id %>"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="task-details">
                            <h3 class="task-name"><%= task.name %></h3>
                            <p class="task-description"><%= task.description %></p>
                            <p class="task-author">Author: <%= task.author %></p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <p class="task-date">Created At: <%= task.displayCreatedAt() %></p>
                    </div>
                    <div class="col-md-3">
                        <p class="task-date">Updated At: <%= task.displayUpdatedAt() %></p>
                    </div>
                    <div><%= task.is_closed %></div>
                    <button onclick="changeTaskCloseState(this)">Change State</button>
                    <button onclick="getAllTasksWithParentProjectId(this)">getTasksApi</button>
                </div>
            </li>
        <% }); %>
    </ul>


<br>
<br>
<br>

<script type="text/javascript" src="/js/common.js"></script>
<script>console.log(test())</script>

<script>

function changeTaskCloseState(button) {
    const taskId = button.closest('.task-item').dataset.taskId;

    fetch(`/api/tasks/change_close_state`, {
        method: 'post',
        body: JSON.stringify({
            taskId: taskId
        })
    })
    .then(response => {
        if (!response.ok) {
        throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        console.log(data.data);
        return data.data
    })
    .catch(error => {
        console.error('Error fetching tasks:', error);
    });
}

function getAllTasksWithParentProjectId(button) {

    const taskId = button.closest('.task-item').dataset.taskId;
    fetch(`/api/get_all_results_with_parent_task_id?parent_project_id=${taskId}`)
    .then(response => {
        if (!response.ok) {
        throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        console.log(data.tasks);
        return data.tasks
    })
    .catch(error => {
        console.error('Error fetching tasks:', error);
    });
}
</script>

